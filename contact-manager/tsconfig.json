{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "module": "CommonJS",
      "target": "ES6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "@entities/*": ["src/entities/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  